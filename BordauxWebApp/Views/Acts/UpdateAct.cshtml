@model ActsUpdateActVM

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="POST" asp-route-id="Id">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Events"></label>
                <div class="checkbox-list">
                    @for (int i = 0; i < Model.Events.Count; i++)
                    {
                    <div class="custom-control custom-checkbox">
                        <input type="hidden" asp-for="@Model.Events[i].Id" />
                        <input type="hidden" asp-for="@Model.Events[i].Name" />
                        <input asp-for="@Model.Events[i].IsChecked" class="custom-control-input">
                        <label asp-for="@Model.Events[i].IsChecked" class="custom-control-label">@Model.Events[i].Name</label>
                    </div>
                    }
                </div>
            </div>
            <center><button type="submit" class="button button-link">Submit</button></center>
        </form>
    </div>
</div>