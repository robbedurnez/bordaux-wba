@model AdminUpdateRoleVM

<center><h1 class="h1">@ViewBag.Title</h1></center>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUsers"></label>
                <div class="checkbox-list">
                    @for (int i = 0; i < Model.ApplicationUsers.Count; i++)
                    {
                        <div class="custom-control custom-checkbox">
                            <input type="hidden" asp-for="@Model.ApplicationUsers[i].RoleId" />
                            <input type="hidden" asp-for="@Model.ApplicationUsers[i].UserId" />
                            <input type="hidden" asp-for="@Model.ApplicationUsers[i].RoleName" />
                            <input type="hidden" asp-for="@Model.ApplicationUsers[i].RoleName" />
                            <input asp-for="@Model.ApplicationUsers[i].IsChecked" class="custom-control-input">
                            <label asp-for="@Model.ApplicationUsers[i].IsChecked" class="custom-control-label">@Model.ApplicationUsers[i].UserName</label>
                        </div>
                    }
                </div>
            </div>
            <center><button type="submit" class="button button-link">Submit</button></center>
        </form>
    </div>
</div>